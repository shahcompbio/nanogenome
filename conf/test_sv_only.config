/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a test of the variant calling only workflow

    Use as follows:
        nextflow run shahcompbio/nanogenome -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '7.GB',
        time: '1.h',
    ]
    withName: CLAIR3 {
        ext.args = '--ctg_name=chr22'
    }
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check sv calling only workflow'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input                      = params.pipelines_testdata_base_path + 'nanogenome/samplesheet_sv_only.csv'
    // Genome references
    fasta                      = params.pipelines_testdata_base_path + 'nanogenome/reference/GRCh38_chr22.fa'
    fai                        = params.pipelines_testdata_base_path + 'nanogenome/reference/GRCh38_chr22.fa.fai'
    vntr_bed                   = params.pipelines_testdata_base_path + 'nanogenome/reference/human_GRCh38_no_alt_analysis_set.trf.bed'
    // wakhan options
    contigs                    = 'chr22'
    // enable germline workflow for testing
    germline                   = true
    // skip phasing subworkflow
    skip_phasing               = true
    skip_cna                   = true
}
