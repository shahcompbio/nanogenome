nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"

    test("Test full workflow") {
        options "-stub"

        when {
            params {
                // savana cna has an issue which prevents running on test file
                cna_tools = "wakhan"
                outdir = "$outputDir"
            }
        }

        then {
            assert workflow.success
        }
    }
}
